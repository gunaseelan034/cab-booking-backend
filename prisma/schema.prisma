generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  password String
  driverAccount DriverAccount?
  riderAccount  RiderAccount?
}

model DriverAccount {
  id       Int       @id @default(autoincrement())
  user     User      @relation(fields: [userId], references: [id])
  userId   Int       @unique
  bookings Booking[]
}

model RiderAccount {
  id       Int  @id @default(autoincrement())
  user     User @relation(fields: [userId], references: [id])
  userId   Int  @unique
  bookings Booking[]
}

model Booking {
  id         Int           @id @default(autoincrement())
  rider      RiderAccount  @relation(fields: [riderId], references: [id])
  riderId    Int
  driver     DriverAccount? @relation(fields: [driverId], references: [id])
  driverId   Int?
  state      String
  workflowId String        @unique
  createdAt  DateTime      @default(now())
}